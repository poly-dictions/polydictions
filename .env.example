# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CHANNEL_ID=-1001234567890

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/polydictions.db

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8765

# REQUIRED: Secret key for API authentication (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_SECRET_KEY=your_secret_key_minimum_32_characters_here

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# REQUIRED for Chrome Extension: Allowed extension IDs (comma-separated)
# Find your extension ID in chrome://extensions after loading unpacked extension
ALLOWED_EXTENSION_IDS=your_chrome_extension_id_here

# Polymarket API
POLYMARKET_API_URL=https://gamma-api.polymarket.com
POLYMARKET_GROK_URL=https://polymarket.com/api/grok/event-summary

# Rate Limiting
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_PERIOD=60

# Monitoring Intervals (seconds)
EVENT_CHECK_INTERVAL=60
NEWS_CHECK_INTERVAL=300
ALERT_CHECK_INTERVAL=30

# Event Filtering
HIGH_VOLUME_THRESHOLD=50000
NEW_EVENT_AGE_HOURS=48
MAX_SEEN_EVENTS=10000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Optional: Redis for caching and rate limiting
# REDIS_URL=redis://localhost:6379/0
